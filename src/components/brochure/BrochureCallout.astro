---
interface Props {
  title?: string;
  quote: string;
  variant?: 'accent' | 'primary';
}

const {
  title = 'Primary Learning Outcome',
  quote,
  variant = 'accent',
} = Astro.props;

const gradientClasses = variant === 'accent'
  ? 'from-brand-accent-500 to-brand-accent-600'
  : 'from-brand-primary-600 to-brand-primary-700';
---

<section class="mb-12">
  <div class={`bg-gradient-to-br ${gradientClasses} rounded-2xl p-8 md:p-10 shadow-xl`}>
    <h2 class="text-2xl font-bold text-white mb-4">{title}</h2>
    <p class="text-white text-xl leading-relaxed italic">
      "{quote}"
    </p>
  </div>
</section>
