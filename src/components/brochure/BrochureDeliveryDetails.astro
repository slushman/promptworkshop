---
type IconName = 'people' | 'document' | 'clock' | 'settings' | 'location';

interface Props {
  title?: string;
  sections: {
    title: string;
    icon?: IconName;
    items: string[];
  }[];
}

const {
  title = 'Delivery Details',
  sections,
} = Astro.props;

const icons: Record<IconName, string> = {
  people: 'M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z',
  document: 'M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z',
  clock: 'M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.828a1 1 0 101.415-1.414L11 9.586V6z',
  settings: 'M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z',
  location: 'M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z',
};
---

<section class="mb-12">
  <div class="bg-white rounded-xl p-8 md:p-10 shadow-lg border-2 border-neutral-200">
    <h2 class="text-3xl font-bold text-neutral-900 mb-8">{title}</h2>

    <div class="space-y-8">
      {sections.map((section) => (
        <div>
          <h3 class="text-xl font-bold text-brand-primary-600 mb-4 flex items-center gap-2">
            {section.icon && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d={icons[section.icon]} clip-rule="evenodd"></path>
              </svg>
            )}
            {section.title}
          </h3>
          <ul class="space-y-2 text-neutral-700 ml-8">
            {section.items.map((item) => (
              <li class="flex items-start gap-2">
                <span class="text-brand-accent-600">&rarr;</span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
