---
interface Props {
  title?: string;
  items: string[];
}

const {
  title = 'Topics Covered',
  items,
} = Astro.props;
---

<section>
  <div class="bg-white rounded-xl p-8 shadow-lg border-2 border-neutral-200 h-full">
    <h2 class="text-2xl font-bold text-neutral-900 mb-6 flex items-center gap-3">
      <svg class="w-7 h-7 text-brand-primary-600" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"></path>
      </svg>
      {title}
    </h2>
    <ul class="space-y-3 text-neutral-700">
      {items.map((item) => (
        <li class="flex items-start gap-2">
          <span class="text-brand-accent-600 font-bold">&bull;</span>
          <span>{item}</span>
        </li>
      ))}
    </ul>
  </div>
</section>
