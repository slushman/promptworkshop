---
import BookingButton from './BookingButton.astro';

interface Props {
  headline: string;
  subheadline?: string;
  industry: string;
}

const { headline, subheadline, industry } = Astro.props;
---

<section class="relative py-24 md:py-32 lg:py-40 overflow-hidden bg-gradient-to-br from-brand-primary-600 via-brand-primary-500 to-brand-primary-700">
  <!-- Decorative background elements -->
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(255,255,255,0.1),transparent_50%)]"></div>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_80%,rgba(14,165,233,0.3),transparent_50%)]"></div>

  <div class="container-custom relative">
    <div class="max-w-4xl mx-auto">
      <!-- Industry Badge -->
      <div class="flex justify-center mb-6">
        <span
          class="inline-flex items-center px-5 py-2.5 rounded-full bg-white/20 backdrop-blur-sm text-white font-semibold text-sm uppercase tracking-wide border-2 border-white/30"
        >
          {industry}
        </span>
      </div>

      <!-- Headline -->
      <h1
        class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-6 text-center leading-tight"
      >
        {headline}
      </h1>

      <!-- Subheadline -->
      {
        subheadline && (
          <p class="text-xl sm:text-2xl md:text-3xl text-white/95 mb-12 text-center max-w-3xl mx-auto leading-relaxed font-medium">
            {subheadline}
          </p>
        )
      }

      <!-- CTA Button -->
      <div class="flex justify-center">
        <BookingButton variant="secondary" size="lg" href="mailto:book@promptwork.shop?subject=Workshop%20Inquiry%20-%20Education" text="Book a Workshop" class="bg-white text-brand-primary-600 hover:bg-neutral-50 border-0 shadow-lg hover:shadow-xl" />
      </div>
    </div>
  </div>
</section>
