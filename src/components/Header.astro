---
import BookingButton from './BookingButton.astro';
---

<header class="sticky top-0 z-50 bg-white shadow-md">
  <div class="container-custom">
    <div class="flex items-center justify-center md:justify-between h-20 md:h-24">
      <!-- Logo / Brand -->
      <a href="/" class="text-2xl md:text-3xl font-bold transition-colors group">
        <span class="text-brand-primary-600 group-hover:text-brand-primary-700">prompt</span><span class="text-neutral-900">work</span><span class="text-brand-accent-600 group-hover:text-brand-accent-700">.shop</span>
      </a>

      <!-- CTA Button -->
      <div class="hidden md:block">
        <BookingButton variant="primary" size="md" href="mailto:book@promptwork.shop?subject=Workshop%20Inquiry" />
      </div>
    </div>
  </div>
</header>
