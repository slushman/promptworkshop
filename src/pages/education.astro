---
import { getEntry } from 'astro:content';
import IndustryLayout from '../layouts/IndustryLayout.astro';
import BookingButton from '../components/BookingButton.astro';

const entry = await getEntry('industries', 'education');
if (!entry) throw new Error('Education content not found');
const { data } = entry;
---

<IndustryLayout
  title={data.title}
  description={data.description || ''}
  headline={data.headline}
  subheadline={data.subheadline}
  industry={data.industry}
>
  <!-- Highlights Section -->
  <section class="section-padding bg-neutral-50">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl sm:text-4xl md:text-h2 font-bold text-neutral-900 mb-6 text-center">
          Why This Matters Now
        </h2>

        <p class="text-lg text-neutral-600 mb-12 text-center max-w-3xl mx-auto">
          AI in education isn't a future problem. It's happening right now in your classroom, whether you're ready or not.
        </p>

        <div class="grid md:grid-cols-2 gap-6">
          {
            data.highlights.map((highlight) => (
              <div class="bg-white rounded-xl p-6 border border-neutral-200">
                <h3 class="text-xl font-semibold text-neutral-900 mb-3">{highlight.title}</h3>
                <p class="text-neutral-600">{highlight.description}</p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Outcomes Section -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl sm:text-4xl md:text-h2 font-bold text-neutral-900 mb-6 text-center">
          What Changes
        </h2>

        <p class="text-lg text-neutral-600 mb-12 text-center max-w-3xl mx-auto">
          This workshop won't solve every AI challenge in education. But it will give you the clarity and confidence to navigate this new reality.
        </p>

        <div class="space-y-4">
          {
            data.outcomes.map((outcome) => (
              <div class="flex items-start gap-4 bg-brand-primary-50 rounded-lg p-6 border border-brand-primary-100">
                <div class="w-8 h-8 bg-brand-primary-500 text-white rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </div>
                <p class="text-neutral-800 text-lg">{outcome}</p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Workshop Format Section (if available) -->
  {
    data.format && (
      <section class="section-padding bg-neutral-50">
        <div class="container-custom">
          <div class="max-w-4xl mx-auto">
            <h2 class="text-3xl sm:text-4xl md:text-h2 font-bold text-neutral-900 mb-12 text-center">
              Workshop Format
            </h2>

            <div class="grid md:grid-cols-3 gap-6">
              <div class="bg-white rounded-xl p-6 text-center border border-neutral-200">
                <div class="w-12 h-12 bg-brand-primary-100 text-brand-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                    />
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-neutral-900 mb-2">Duration</h3>
                <p class="text-neutral-600">{data.format.duration}</p>
              </div>

              <div class="bg-white rounded-xl p-6 text-center border border-neutral-200">
                <div class="w-12 h-12 bg-brand-primary-100 text-brand-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    />
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-neutral-900 mb-2">Delivery</h3>
                <p class="text-neutral-600">{data.format.delivery}</p>
              </div>

              <div class="bg-white rounded-xl p-6 text-center border border-neutral-200">
                <div class="w-12 h-12 bg-brand-primary-100 text-brand-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"
                    />
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-neutral-900 mb-2">Customization</h3>
                <p class="text-neutral-600">{data.format.customization}</p>
              </div>
            </div>
          </div>
        </div>
      </section>
    )
  }

  <!-- CTA Section -->
  {
    data.cta && (
      <section class="relative section-padding overflow-hidden bg-gradient-to-br from-brand-accent-500 via-brand-accent-600 to-brand-primary-600">
        <!-- Decorative background -->
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_30%,rgba(255,255,255,0.1),transparent_50%)]"></div>

        <div class="container-custom relative">
          <div class="max-w-3xl mx-auto text-center">
            <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-white">
              {data.cta.heading}
            </h2>
            <p class="text-xl md:text-2xl mb-10 text-white/95 leading-relaxed">
              {data.cta.description}
            </p>
            <BookingButton
              variant="secondary"
              size="lg"
              href="mailto:book@promptwork.shop?subject=Workshop%20Inquiry%20-%20Education"
              text={data.cta.buttonText || 'Book A Workshop'}
              class="bg-white text-brand-primary-600 hover:bg-neutral-50 border-0 shadow-xl hover:shadow-2xl"
            />
          </div>
        </div>
      </section>
    )
  }
</IndustryLayout>
